load("@io_bazel_rules_go//go:def.bzl", "go_binary", "go_test")

# Buildpack for the Java functions framework copy.
load("//tools:defs.bzl", "buildpack")

licenses(["notice"])

buildpack(
    name = "functions_framework",
    srcs = [
        "extra_tasks.gradle",
        "launch.sh",
    ],
    executables = [
        ":main",
    ],
    visibility = [
        "//builders:java_builders",
        "//builders:__subpackages__",
    ],
)

go_binary(
    name = "main",
    srcs = ["main.go"],
    # Strip debugging information to reduce binary size.
    gc_linkopts = [
        "-s",
        "-w",
    ],
    deps = [
        "//pkg/devmode",
        "//pkg/env",
        "//pkg/gcpbuildpack",
        "@com_github_buildpacks_libcnb//:go_default_library",
        "@com_github_beevik_etree//:go_default_library",
    ],
)

go_test(
    name = "main_test",
    size = "small",
    srcs = ["main_test.go"],
    embed = [":main"],
    rundir = ".",
    deps = ["//pkg/gcpbuildpack"],
)
